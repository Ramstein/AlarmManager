<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_timepicker"

        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:translationY="-30dp"
        android:hint="sem_plus_sub or speak test."
        />
    <Button
        android:id="@+id/speak_btn"
        android:layout_above="@id/button_timepicker"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-40dp"
        android:background="@color/colorAccent"
        android:translationY="-30dp"
        android:translationX="-100dp"
        android:text="Say it!" />

    <Button
        android:id="@+id/sem_plus_Sub_btn"
        android:layout_above="@id/button_timepicker"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-40dp"
        android:background="@color/colorAccent"
        android:translationX="100dp"
        android:translationY="-30dp"
        android:text="SEM_PLUS_SUB" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/text_view_countdown"
        android:layout_marginBottom="50dp"
        android:text="No Lamification set"
        android:translationY="160dp"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/button_timepicker"
        android:layout_marginBottom="30dp"
        android:text="Time left for next concurration"
        android:translationY="130dp"
        android:textSize="20sp" />
    <Button
        android:id="@+id/button_timepicker"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:text="Schedule"
        android:translationY="130dp"
        android:translationX="-100dp" />
    <Button
        android:id="@+id/gallery"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="343dp"
        android:background="@color/colorAccent"
        android:text="GALLERY"
        android:translationY="130dp"
        android:translationX="100dp" />
    <Button
        android:id="@+id/quanified"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_timepicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@color/colorAccent"
        android:translationY="130dp"
        android:text="Quanified data" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/quanified"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@color/colorAccent"
        android:translationY="130dp"
        android:text="Cancel Lamification" />


</RelativeLayout>